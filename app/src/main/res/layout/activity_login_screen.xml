<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginScreen"
    android:background="@color/bgColorLogin"
    >


    <EditText
        android:id="@+id/ursNameBx"
        style="@style/sectionHeader"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="369dp"
        android:background="@color/bgColorLogin"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="#633100" />
        android:inputType="text" />

    <EditText
        android:id="@+id/pswdTxt"
        style="@style/sectionHeader"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ursNameBx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@color/bgColorLogin"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#633100" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:text="L I O N E L "
        android:textColor="#633100" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="284dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="471dp"
        android:background="@drawable/mybutton"
        android:text="Sign In" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="171dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        app:srcCompat="@drawable/icon" />

    <ProgressBar
        android:id="@+id/loadingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:indeterminate="true"></ProgressBar>

    <TextView
        android:id="@+id/incorrectPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pswdTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textColor="#ff0000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:visibility="invisible"/>


</RelativeLayout>